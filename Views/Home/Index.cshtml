<div class="main-img"> 
    <span class="title">Meu blog Lindo</span>
</div>

<div class="container">
    @foreach (var post in Model)
    {
        var imgPath = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@imgPath"/>
            <span class="title">
                @post.Title
            </span>

        </a>
    }
</div>