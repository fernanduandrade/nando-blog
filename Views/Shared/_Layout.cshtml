<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300,400,400i|Nunito:300,300i" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/style.css" />
    </environment>
    <environment include="Production">
        <link rel="stylesheet" href="~/css/style.min.css" />
    </environment>
    
</head>
<body>
    <div class="container">
        <nav>
            <div class="nav__items">
                <p class="title">Fernando Andrade </p>
                <form asp-controller="Home" asp-action="Index" method="get">
                    <input class="search" type="hidden" name="pageNumber" value="@Model.PageNumber" placeholder="pesquisar artigo">
                    <input class="search" type="hidden" name="category" value="@Model.Category" placeholder="pesquisar artigo">
                    <input class="search" type="text" name="search" placeholder="pesquisar artigo" value="@Model.Search">
                    <button class="submit-btn">Search</button>
                </form>
                
                <a class="nav__link" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav__link" asp-controller="Home" asp-action="Index" asp-route-category="Programming">Programming</a>  
                
                @if(User.Identity.IsAuthenticated) 
                {
                    <a class="nav__link" asp-controller="Auth" asp-action="Logout">Sair</a>
                }

            </div>
        </nav>
    
        <div>
            @RenderBody()   
        </div>
    </div>
    

    @RenderSection("scripts", false)

</body>
</html>